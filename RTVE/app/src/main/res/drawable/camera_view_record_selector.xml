<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   // pressed turning the toggle on
   <item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/camera_view_record_unselected_pressed" />
   // pressed, turning the toggle off
   <item android:state_pressed="true" android:drawable="@drawable/camera_view_record_selected_pressed" />
   // non-pressed, checked
   <item android:state_checked="true" android:drawable="@drawable/camera_view_record_selected" />
   // non-pressed, non-checked
   <item android:drawable="@drawable/camera_view_record_normal"/>
</selector>